<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.enuos.jimat.activity.account.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:text="账号" />

        <EditText
            android:id="@+id/login_text_account_psw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入手机号"
            android:textColorHint="@color/color_CACACA"
            android:textSize="15sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@drawable/login_divider"
        android:layout_marginRight="25dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:text="密码" />

        <EditText
            android:id="@+id/login_text_code_psw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入密码"
            android:textSize="15sp"
            android:textColorHint="@color/color_CACACA"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/login_img_code_is_hide"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:src="@drawable/psw_img" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@drawable/login_divider"
        android:layout_marginRight="25dp"
        android:layout_height="1dp" />

    <Button
        android:id="@+id/login_bt_login_psw"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_login_selector"
        android:text="登 录"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/login_text_go_register_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="快速注册"
            android:textColor="@color/mainBlue"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/login_text_forget_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:text="忘记密码?"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
