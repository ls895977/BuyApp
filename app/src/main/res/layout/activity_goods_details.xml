<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.enuos.jimat.activity.goods.GoodsDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/white">
            <com.youth.banner.Banner
                android:id="@+id/goods_details_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:image_scale_type="fit_center"
                app:is_auto_play="true">
            </com.youth.banner.Banner>

            <ImageView
                android:id="@+id/goods_details_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/commodity_back_icon" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textColor="@color/color_D02D2E"
                    android:textSize="18sp"
                    android:text="RM "/>
                <TextView
                    android:id="@+id/goods_details_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="3999.00"
                    android:textColor="@color/color_D02D2E"
                    android:textSize="22sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距开始"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/goods_details_goods_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="00:15:23"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textColor="@color/color_848484"
                    android:textSize="15sp"
                    android:text="RM "/>

                <TextView
                    android:id="@+id/goods_details_details_default"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textColor="@color/color_848484"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/goods_details_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="4299.00"
                    android:textColor="@color/color_848484"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:text="已售"
                    android:textColor="@color/color_848484"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/goods_details_progess_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30/100"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/color_848484"
                    android:textSize="13sp" />
                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/goods_details_progess"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="60dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="5dp"
                    android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:maxHeight="50dp"
                    android:minHeight="16dp"
                    android:progress="34"
                    android:progressDrawable="@drawable/myprogressbarhome" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/goods_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="商品"
                android:textColor="@color/color_4A4A4A"
                android:textStyle="bold"
                android:textSize="17sp"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/goods_details_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:text="店铺"
                android:textColor="@color/color_949494"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/color_F2F2F2">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/goods_details_linear_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/goods_details_text_details"
                    style="@style/orders_text"
                    android:text="详情" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/goods_details_linear_price_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/goods_details_text_price_record"
                    style="@style/orders_text"
                    android:text="价格变动记录" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/goods_details_linear_buy_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/goods_details_text_buy_record"
                    style="@style/orders_text"
                    android:layout_height="wrap_content"
                    android:text="购买记录" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/goods_details_tab_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:background="@drawable/slider"
            android:paddingRight="10dp" />




        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/goods_details_view_pager"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/goods_details_go_msg"
                    android:layout_weight="1"
                    android:layout_width="44dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/buy_go_msg" />

                <Button
                    android:id="@+id/goods_details_btn_buy"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_home_buy_selector"
                    android:text="立即购买"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
