<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_choose_address_name"
            android:layout_width="wrap_content"
            android:text="收货人：张三"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="16dp"
            android:textSize="13sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/item_choose_address_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:text="13112341234"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/item_choose_address_checked"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_choose_address_area"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:maxLines="3"
            android:textSize="13sp"
            android:text="收货地址：张三四张三四张三四张三四张三四张三四张三四张三四张四"
            android:textColor="@color/color_CACACA"/>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/color_ABAAAA"/>

        <TextView
            android:id="@+id/item_choose_address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_ABAAAA"
            android:layout_marginRight="20dp"
            android:text="编辑"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_F2F2F2">
    </LinearLayout>

</LinearLayout>