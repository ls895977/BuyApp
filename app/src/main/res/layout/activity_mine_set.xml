<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F1F1F1"
    tools:context="com.enuos.jimat.activity.mine.MineSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/mine_set_back_rl"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mine_set_back"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back_icon"
                    android:layout_marginLeft="20dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/mine_title_name_size"
                    android:textStyle="bold"
                    android:textColor="@color/color_4A4A4A"
                    android:text="Setting" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_linear_protocol"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ll_click_selector">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_4A4A4A"
            android:textSize="14sp"
            android:text="Terms of Use"/>
        <ImageView
            style="@style/mine_selection_image"
            android:src="@drawable/right_icon"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@drawable/bg_divider"/>

    <LinearLayout
        android:id="@+id/set_linear_secret"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ll_click_selector">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_4A4A4A"
            android:textSize="14sp"
            android:text="Privacy Policy"/>
        <ImageView
            style="@style/mine_selection_image"
            android:src="@drawable/right_icon"/>
    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@drawable/bg_divider"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/set_linear_about"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ll_click_selector">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_4A4A4A"
            android:textSize="14sp"
            android:text="About us"/>
        <ImageView
            style="@style/mine_selection_image"
            android:src="@drawable/right_icon"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@drawable/bg_divider"/>

    <LinearLayout
        android:id="@+id/set_linear_encourage"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ll_click_selector">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_4A4A4A"
            android:textSize="14sp"
            android:text="Encourage us"/>
        <ImageView
            style="@style/mine_selection_image"
            android:src="@drawable/right_icon"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/set_btn_exit"
            android:layout_width="match_parent"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_login_selector"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            android:text="L o g  O u t"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>
