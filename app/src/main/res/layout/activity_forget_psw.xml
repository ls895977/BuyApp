<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.enuos.jimat.activity.account.ForgetPswActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mainBlue">

            <ImageView
                android:id="@+id/forget_back"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back_icon"
                android:layout_marginLeft="20dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/forget_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:textSize="@dimen/mine_right_name_size"
                android:text="邮箱找回"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/mine_title_name_size"
                    android:textColor="@color/white"
                    android:text="忘记密码" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/color_F1F1F1"/>

    <LinearLayout
        android:id="@+id/forget_ll_account"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:text="手机号        " />

        <EditText
            android:layout_marginLeft="25dp"
            android:id="@+id/forget_text_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入手机号"
            android:textColorHint="@color/color_CACACA"
            android:textSize="15sp"
            android:inputType="number"
            android:textColor="@color/black"/>

    </LinearLayout>

    <View
        android:id="@+id/forget_view_account"
        android:layout_width="match_parent"
        android:background="@drawable/login_divider"
        android:layout_marginRight="25dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/forget_ll_email"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:text="邮箱账号    " />

        <EditText
            android:id="@+id/forget_text_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入邮箱账号"
            android:textColorHint="@color/color_CACACA"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"/>

    </LinearLayout>

    <View
        android:id="@+id/forget_view_email"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@drawable/login_divider"
        android:layout_marginRight="25dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:text="验证码        " />

        <EditText
            android:id="@+id/forget_text_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入验证码"
            android:textSize="15sp"
            android:textColorHint="@color/color_CACACA"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/forget_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginRight="25dp"
            android:textColor="@color/mainBlue"
            android:text="获取验证码" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@drawable/login_divider"
        android:layout_marginRight="25dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:text="输入新密码" />

        <EditText
            android:id="@+id/forget_text_psw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入六位密码"
            android:textSize="15sp"
            android:textColorHint="@color/color_CACACA"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/forget_img_psw_is_hide"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginRight="37dp"
            android:src="@drawable/psw_img" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@drawable/login_divider"
        android:layout_marginRight="25dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:text="确认新密码" />

        <EditText
            android:id="@+id/forget_text_psw_ensure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="请再次输入新密码"
            android:textSize="15sp"
            android:textColorHint="@color/color_CACACA"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/forget_img_psw_is_hide_ensure"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginRight="37dp"
            android:src="@drawable/password_hide" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@drawable/login_divider"
        android:layout_marginRight="25dp"
        android:layout_height="1dp" />

    <Button
        android:id="@+id/forget_bt_commit"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_login_selector"
        android:text="确认并重置密码"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>
