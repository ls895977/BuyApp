<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.enuos.jimat.activity.account.newInfo.ForgetPswNewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/forget_new_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="16dp"
            android:src="@drawable/back_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/forget_new_text_top_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Forgot Password"
        android:textColor="@color/text_black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/forget_new_text_top_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Please Enter your Mobile Number to search for your account"
        android:textColor="@color/color_4A4A4A"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/forget_new_text_top_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Please Enter at below"
        android:textColor="@color/color_4A4A4A"
        android:textSize="17sp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/forget_new_account_linear_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Mobile Number"
            android:textColor="@color/color_4A4A4A"
            android:textSize="17sp" />
    </LinearLayout>

    <!--<LinearLayout-->
    <!--android:id="@+id/forget_new_account_linear_bottom"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="40dp"-->
    <!--android:gravity="center_vertical">-->
    <LinearLayout
        android:id="@+id/forget_new_account_linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+6"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/forget_new_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@null"
            android:hint="Please Enter Your Mobile Number"
            android:inputType="number"
            android:textColorHint="@color/color_9B9B9B"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forget_new_sms_linear_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="4 Digit Verification Code"
            android:textColor="@color/color_4A4A4A"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/forget_new_sms_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/color_9B9B9B"
            android:textSize="17sp" />

        <Button
            android:id="@+id/forget_new_sms_btn_get"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_login1_press_shape"
            android:text="Send Code"
            android:textColor="@color/color_9B9B9B"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forget_new_sms_linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/forget_new_sms_one"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/color_4A4A4A"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/forget_new_sms_two"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/color_4A4A4A"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/forget_new_sms_three"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/color_4A4A4A"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/forget_new_sms_four"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/color_4A4A4A"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forget_new_password_linear_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/color_4A4A4A"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forget_new_account_view_bottom_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_9B9B9B"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forget_new_password_linear_bottom_tips"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Password Setting"
            android:textColor="@color/color_4A4A4A"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forget_new_password_linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/forget_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Please Enter Password, No Less Than 6 Digits"
            android:inputType="textPassword"
            android:textColorHint="@color/color_9B9B9B"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/forget_new_password_is_hide"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:src="@drawable/psw_img" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forget_new_password_linear_bottom_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_9B9B9B" />
    </LinearLayout>

    <Button
        android:id="@+id/forget_new_go_next"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_login_selector"
        android:text="N e x t"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/forget_new_go_save"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_login_selector"
        android:text="A p p l y"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="128dp"
            android:layout_marginRight="128dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_011D08" />
    </RelativeLayout>

</LinearLayout>
